<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.clientInfoFragment.InfoFragment"
    android:background="@drawable/backgroundgradient">


    <RelativeLayout
        android:id="@+id/HealthRiskBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/loginpageroundstyle"
        android:orientation="horizontal"
        android:radius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/name"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="90dp"
            android:layout_marginRight="90dp"
            android:gravity="center_horizontal"
            android:text="@string/first_last"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="190dp"
            android:text="Gender"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/genderAns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="190dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:gravity="right"
            android:text="Female"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="220dp"
            android:text="Age"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ageAns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:text="26"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="250dp"
            android:text="Location"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/locationAns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:gravity="right"
            android:text="Kampala, Uganda"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/village_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="280dp"
            android:text="Village Number"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/village_num_ans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="280dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:gravity="right"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/disability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="310dp"
            android:text="@string/disability"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/disabilityAns"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="310dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="right"
            android:text="Learning"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="126dp"
            android:layout_height="127dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="114dp"
            android:layout_marginLeft="114dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="119dp"
            android:layout_marginRight="119dp"
            app:srcCompat="@drawable/stockprofileimage"
            tools:srcCompat="@drawable/stockprofileimage" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>