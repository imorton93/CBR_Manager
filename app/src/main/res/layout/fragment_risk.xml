<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.clientInfoFragment.RiskFragment"
    android:background="@drawable/backgroundgradient">


    <RelativeLayout
        android:id="@+id/HealthRiskBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/loginpageroundstyle"
        android:orientation="horizontal"
        android:radius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <TextView
            android:id="@+id/health"
            android:layout_width="111dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/health"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/healthRisk"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/healthDot"
            android:layout_alignBottom="@+id/healthDot"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="7dp"
            android:layout_toStartOf="@+id/healthDot"
            android:layout_toLeftOf="@+id/healthDot"
            android:layout_toEndOf="@+id/health"
            android:layout_toRightOf="@+id/health"
            android:gravity="center"
            android:text="Health Risk Level" />

        <TextView
            android:id="@+id/goalHealth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:text="Goals"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/healthDot"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_alignTop="@+id/health"
            android:layout_alignBottom="@+id/health"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="2dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/EducationRiskBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/loginpageroundstyle"
        android:orientation="horizontal"
        android:radius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HealthRiskBackground">

        <ImageView
            android:id="@+id/EducationDot"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_alignTop="@+id/education1no"
            android:layout_alignBottom="@+id/education1no"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginBottom="1dp" />

        <TextView
            android:id="@+id/education1no"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/education"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/educationRisk"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/EducationDot"
            android:layout_alignBottom="@+id/EducationDot"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="-2dp"
            android:layout_toStartOf="@+id/EducationDot"
            android:layout_toLeftOf="@+id/EducationDot"
            android:layout_toEndOf="@+id/education1no"
            android:layout_toRightOf="@+id/education1no"
            android:gravity="center"
            android:text="Education Risk Level" />

        <TextView
            android:id="@+id/goalEducation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:text="Goals"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/SocialRiskBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/loginpageroundstyle"
        android:orientation="horizontal"
        android:radius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EducationRiskBackground">

        <TextView
            android:id="@+id/social"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/social"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/socialRisk"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_toStartOf="@+id/SocialDot"
            android:layout_toLeftOf="@+id/SocialDot"
            android:layout_toEndOf="@+id/social"
            android:layout_toRightOf="@+id/social"
            android:gravity="center"
            android:text="Social Risk Level" />

        <TextView
            android:id="@+id/goalSocial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:text="Goals"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/SocialDot"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_alignTop="@+id/social"
            android:layout_alignBottom="@+id/social"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-6dp"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginBottom="-1dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>